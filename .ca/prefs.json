{
	"run": [
		{
			"name": "default",
			"default": "true",
			
			//	current working dir
			"cwd": "~/workspace",
			
			//	run commands list
			//	example: 
			//		"grunt", "node app.js"
			"commands": [
				//	NOTE: replace line below
				"echo \"Run configuration not defined! Please open Container Config and define your run configuration.\""
			],
			
			//	environment variables
			//	example: 
			//		"environment": "development",
			//		"port": "3000"
			"environment": {
				"NODE_ENV": "development",
				"PORT": "3000",
				"IP": "0.0.0.0"
			},
			
			//	if "preview" is set, it will open the link in a 
			//	preview panel after setting environment variables 
			//	and all commands have been executed
			"preview": {
				"url": "http://{{DOMAIN}}:{{PORT}}/",
				"type": "external"
			}
		}
	],
	"find_in_files": {
		"ignore": [
			//	file types to ignore in search
			".git", ".svn", "*.min.js" 
		]
	}
}